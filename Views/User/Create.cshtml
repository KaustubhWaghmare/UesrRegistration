@model UserRegistration.Models.User
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add User</h1>
                    <p class="text-center text-danger">@TempData["message"]</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="form-control"
                            placeholder="Enter User Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="email" asp-for="Email" class="form-control"
                             placeholder="Enter User Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfBirth"></label>
                            <input type="date" asp-for="DateOfBirth" class="form-control"
                             placeholder="Enter Date Of Birth" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender"></label>
                            <input type="text" asp-for="Gender" class="form-control"
                                   placeholder="Enter Gender" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address"></label>
                            <input type="text" asp-for="Address" class="form-control"
                             placeholder="Enter Address" />
                            <span asp-validation-for="Address" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="ContactNumber"></label>
                            <input type="text" asp-for="ContactNumber" class="form-control"
                             placeholder="Enter Contact Number " />
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success float-sm-end" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

